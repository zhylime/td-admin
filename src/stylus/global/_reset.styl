global-reset()

.clearfix
  clearfix()

.clear
  clear both
*
  margin 0
  padding 0
  global-reset()

body
  font-family 'Heiti SC', 'Microsoft YaHei', 'Arial', sans-serif
  background #f8fbff



.btn:focus
.btn:active:focus
.btn.active:focus
.btn.focus
.btn:active.focus
.btn.active.focus
  outline none !important
.btn-default
.btn-primary
  color #354967
  border 1px solid #ccc
  background #e4eaf3
  background linear-gradient(top, #fff, #e4eaf3)
  &:hover
    background #52a9e8
    background linear-gradient(top, #52a9e8, #3397de)
    color white
    border 1px solid #2b8fd5