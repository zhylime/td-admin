.c-module-charts
  max-width 100%
  .nav-tabs
    a
      background $charts-tab-bg-blue
      &[aria-expanded="true"]
        border-top 3px solid $sidenav-bg-blue !important
        border-radius 0
      &:hover
        background none !important
        border-bottom 1px solid white !important
        
  .tab-content
    // padding 20px
    border-left 1px solid #ccc
    border-bottom 1px solid #ccc
    border-right 1px solid #ccc
    .tab-pane.active
      padding 20px
  .radio-group
    .btn
      margin-top 0.5rem
      margin-right 0.5rem
      border-radius 1rem
      position relative
      &:hover
        background none
      &.active
        background $btn-blue
        color white
        &:after
          content url(../images/filter-arrow.jpg)
          width 15px
          height 8px
          position absolute
          display block
          left 50%
          transform translateX(-50%)
          top 29px
  &__dropdown-menu
    position relative
    background #edf4fc
    height 60px
    width 100%
    padding 9px 10px
    &__list
      background #5085cd
      padding 15px 5px
      width 185px
      position absolute 
      z-index 1
      box-shadow 1px 3px 10px #ccc
      .icon-dropdown-arrow
        background-position 0 0
        position absolute
        right 10px
        top 50%
        transform translateY(-50%)
      &__item
        width 175px
        height 42px
        line-height 42px
        color white
        text-align center
        position relative
        border-radius 4px
        cursor pointer
        &.active
        &:hover
          background $color-panel-icon
          
        
        
    &__sub-list
      background #ddecff
      padding 15px 5px
      width 185px
      position absolute
      z-index 1
      box-shadow 1px 3px 10px #ccc
      .icon-dropdown-arrow
        background-position -7px 0
        position absolute
        right 10px
        top 50%
        transform translateY(-50%)
      .c-module-charts__dropdown-menu__list__item
        width 175px
        height 42px
        line-height 42px
        color $tabs-nav-text-active-blue
        text-align center
        &.active
        &:hover
          background #b1ccf1
    &__selected
      width 175px
      height 42px
      line-height 42px
      background $color-panel-icon
      color white
      text-align center
      position relative
      border-radius 4px
      cursor pointer
      .icon-dropdown-arrow
        background-position 0 0
        position absolute
        right 10px
        top 50%
        transform translateY(-50%)
    
  &__grid
    margin-top 30px
    .grid-item
      width 260px
      float left
      position relative
      border 2px solid #e2ecf9
      margin-bottom 30px
      &.active
      &:hover
        background #ee5f20
        .grid-item__content
          .name
          .brief
            color white
        .grid-item__btns
          background #e25517
          a
            color white
          .icon-preview
            background url(../images/icon-preview.png)
          .icon-module
            background url(../images/icon-module.png)

      &__image
        padding 5px 10px
        img
          width 100%
          border 2px solid #e2ecf9
      &__content
        padding 5px 10px 15px
        .name
          font-size 18px
          color black
          line-height 40px
        .brief
          font-size 14px
          color #787878
          line-height 20px
      &__btns
        background #f2f8ff
        text-align center
        a
          display inline-block
          width 65px
          height 37px
          font-size 16px
          line-height 37px
          color #7da6de
          margin 0 10px
          &:hover
            text-decoration none
          i
            margin-right 5px
          .icon-preview
            background url(../images/icon-preview-blue.png)
            display inline-block
            vertical-align middle
            width 21px
            height 12px
           
          .icon-module
            background url(../images/icon-module-blue.png)
            display inline-block
            vertical-align middle
            width 15px
            height 16px

          
  &__search-container
    margin-top 5px
    &__button
      padding 0 20px
      border-radius 6px
    &__button
    input
      height 35px
  .button-remove
    display none
    

// 后台
.c-module-charts-edit
  max-width 1400px
  &__menu
    width 240px
    float left
    margin-top 30px
  .c-module-charts__grid
    display inline-block
    width calc(100% - 240px)
  .c-module-charts__grid 
    .grid-item
      width 300px
      &__btns
        a
          margin 0