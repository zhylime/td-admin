
// modal

.loginModal
  @media(min-width: $tablet-min)
    margin-top -300px
    top 50%
  .modal-header
    background-color $login-blue-bg
    color $color-white
  .modal-dialog
    @media(min-width: $tablet-min)
      width 400px
  .modal-body
    padding 2rem 1rem
  @media(min-width: $tablet-min)
    .text-label
      text-align right

  button
    min-width 100px

  .button-group
    padding-top 2rem
