
// modal

.loginModal
  @media(min-width: $tablet-min)
    margin-top -300px
    top 50%
  .modal-header
    background-color $login-blue-bg
    color $color-white
  .modal-dialog
    @media(min-width: $tablet-min)
      width 400px
  .modal-body
    padding 2rem 1rem

  button
    min-width 100px

  .button-group
    padding-top 2rem
    .button-single
      @media(min-width: $tablet-min)
        &:nth-child(1)
          text-align right
        &:nth-child(2)
          text-align left
      button
        @media(max-width: $tablet-max)
          width 100%

    
