
// .c-content

.c-content
  background $background-blue url("../images/bg-td.jpg") no-repeat 50% 50%
  min-width $desktop-min
  min-height 550px
  height 100%
  margin 0 auto
  overflow hidden
  padding-bottom 5em
  position relative
  animation animatedBackground 20s linear infinite
  &__background
    min-width 1024px
    .star
      position absolute
      box-shadow 0 0 5px $col-white
      border-radius 50%
      outline none
      animation star 2s ease-in-out infinite
      animation-fill-mode both
      filter blur(1px)
    .star1
      left 25%
      top 39%
      width 12px
      animation-name star1
      animation-duration 3
    .star2
      left 50%
      top 85%
      animation-duration 2
    .star3
      left 30%
      top 90%
      width 13px
      animation-name star
      animation-duration 2
    .star4
      left 15%
      top 80%
      width 9px
      animation-name star
      animation-duration 1
    .star5
      left 60%
      top 90%
      width 9px
      animation-duration 2
      animation-name star1
    .star6
      left 80%
      top 20%
      width 9px
      animation-duration 2
      animation-name star1
    .star7
      width 12px
      left 70%
      top 25%
      animation-duration 2
    .star8
      width 12px
      left 75%
      top 30%
      animation-duration 1
  &__menu
    margin 0 auto
    min-width 768px
    max-width 1024px
    position relative
    &--item
      display inline-block
      cursor pointer
      position absolute
      width 450px
      &:nth-child(1)
        top 160px
      &:nth-child(3)
        top 210px
      &:nth-child(2)
        top 5px
        left 50%
        transform translateX(-50%)
      &:nth-child(1)
        left 0%
      &:nth-child(3)
        right 0%
      img
        width 100%
        height auto
        position absolute
      .fadeIn
        opacity 0
        transition opacity 1s
      .z1
        z-index 1
      .z2
        z-index 2
      .z3
        z-index 3
      .z4
        z-index 4
      .z5
        z-index 5
      .z6
        z-index 6
      .z7
        z-index 7
      &:hover
        .c-content__menu--info
          opacity .8
          display block
        .rotate
          animation rotate 2s linear infinite
          transform-origin 24% 57%
        .fadeIn
          opacity 1
        .movePos
          animation movePos .5s linear 1
        .movePos1
          animation movePos1 1s linear 1
        .movePos2
          animation movePos2 1.5s linear 1
        .movePos3
          animation movePos3 2s linear 1
        .moveSq
          animation moveSq .5s linear 1
        .moveSq1
          animation moveSq1 1s linear 1
        .moveSq2
          animation moveSq2 1s linear 1
        .moveSector
          animation moveSector 1s ease-in-out 1
        .fadeOut
          animation fadeOut .3s ease-in-out 1
        .fadeOut1
          animation fadeOut1 .6s ease-in-out 1
        .fadeOut2
          animation fadeOut2 1s ease-in-out 1
        .moveM1
          animation moveM1 1s ease-in-out 1
        .moveM2
          animation moveM2 1s ease-in-out 1
    &--info
      background-color $bg-overlay-blue
      border 1px solid $border-green
      color $color-white
      z-index 100000
      position absolute
      width 334px
      padding-bottom 10px
      transition opacity .3s ease-in-out
      opacity 0
      display none
      &.info1
        left 0%
        top -150px
      &.info2
        left 85%
        top 10px
      &.info3
        left -50%
        top 120px
      i
        width 4px
        height 4px
        background-color $border-green
        display block
        position absolute
        &.lt
          left 0px
          top 0px
        &.rt
          right 0px
          top 0px
        &.rb
          right 0px
          bottom 0px
        &.lb
          left 0px
          bottom 0px
      h6
        height 26px
        line-height 26px
        font-size 16px
        color $color-blue
        font-weight 400
        text-align center
        margin-top 8px
        overflow hidden
    &--detail
      width 280px
      margin 0 auto 6px
      font-family 'Microsoft YaHei' , 'Arial' , sans-serif
      &.tit
        overflow hidden
        display block
        line-height 20px
        font-size 12px
        color $color-blue
        padding 3px 0
      &.txt
        line-height 20px
        font-size 12px
        color $color-white
        overflow hidden



    
