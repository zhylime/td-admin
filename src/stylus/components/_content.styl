
// .c-content

.c-content
  background url("../images/bg-td.jpg") no-repeat center
  min-width $desktop-min
  min-height 650px
  margin 0 auto
  overflow hidden
  padding-bottom 5em
  position relative
  &__background
    min-width 1024px
    .star
      position absolute
      box-shadow 0 0 5px $col-white
      border-radius 50%
      outline none
      animation star 2s ease-in-out infinite
      animation-fill-mode both
      filter blur(1px)
    .star1
      left 25%
      top 39%
      width 12px
      animation-name star1
      animation-duration 3
    .star2
      left 50%
      top 85%
      animation-duration 2
    .star3
      left 30%
      top 90%
      width 13px
      animation-name star
      animation-duration 2
    .star4
      left 15%
      top 80%
      width 9px
      animation-name star
      animation-duration 1
    .star5
      left 60%
      top 90%
      width 9px
      animation-duration 2
      animation-name star1
    .star6
      left 80%
      top 20%
      width 9px
      animation-duration 2
      animation-name star1
    .star7
      width 12px
      left 70%
      top 25%
      animation-duration 2
    .star8
      width 12px
      left 75%
      top 30%
      animation-duration 1
  &__menu
    margin 0 50px
    @media (min-width:1100px)
      margin  0 100px
    position relative
    &--item
      display inline-block
      cursor pointer
      position absolute
      width 420px
      @media (min-width:1300px)
        width 500px
      &:nth-child(1),
      &:nth-child(3)
        top 230px
      &:nth-child(2)
        top 10px
        left 50%
        transform translateX(-50%)
      &:nth-child(1)
        left 0%
      &:nth-child(3)
        right -1%
      img
        width 100%
        height auto
        position absolute
        &:nth-child(2)
          display none
      &:hover
        .c-content__menu--info
          display block
        img:nth-child(1)
          display none
        img:nth-child(2)
          display block
          transform scale(1.1)
    &--info
      background-color $bg-overlay-blue
      border 1px solid $border-green
      color $color-white
      z-index 100000
      position absolute
      opacity .9
      width 334px
      padding-bottom 10px
      display none
      &.info1
        left 80%
        top -20px
      &.info2
        left 80%
      &.info3
        left -30%
        top 120px
      i
        width 4px
        height 4px
        background-color $border-green
        display block
        position absolute
        &.lt
          left 0px
          top 0px
        &.rt
          right 0px
          top 0px
        &.rb
          right 0px
          bottom 0px
        &.lb
          left 0px
          bottom 0px
      h6
        height 26px
        line-height 26px
        font-size 16px
        color $color-blue
        font-weight 400
        text-align center
        margin-top 8px
        overflow hidden
    &--detail
      width 280px
      margin 0 auto 6px
      font-family 'Arial', sans-serif
      &.tit
        overflow hidden
        display block
        line-height 20px
        font-size 12px
        color $color-blue
        padding 3px 0
      &.txt
        line-height 20px
        font-size 12px
        color $color-white
        overflow hidden



    
