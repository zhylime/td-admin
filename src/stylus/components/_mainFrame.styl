.c-mainFrame
  font-size 0
  &__sideNav
  &__tabContent
    display inline-block
    vertical-align top
    font-size 14px
 
  &__sideNav
    background $sidenav-bg-blue
    position relative
    transition width 1s
    
    &__arrow
      background $tabs-nav-arrow-bg-blue
      width 20px
      height 60px
      position absolute
      z-index 1
      right 0
      top 50%
      transform translateY(-50%)
      
      
      &[data-status='open']
        right 0
        border-top-left-radius 10px
        border-bottom-left-radius 10px
        .c-mainFrame__sideNav__arrow__image
          background-position -30px -35px
  
        // transform rotate(0deg) translateY(-50%)
      &[data-status='close']
        right -20px
        border-top-right-radius 10px
        border-bottom-right-radius 10px
        // transform rotate(180deg) translateY(-50%)
        .c-mainFrame__sideNav__arrow__image
          background-position -45px -35px
        
        
      &__image
        background url(../images/spirit-icons.png)
        background-repeat no-repeat
        position absolute
        display block
        top 50%
        left 50%
        transform translateX(-50%) translateY(-50%)
        width 8px
        height 15px
        
        z-index 2
        
    &__navList
      
      li[data-expanded='true']
        ul
        li
          display block
      li[data-expanded='false']
        ul
        li
          display none
        
    li
      
      span
      a
        display block
        width 100%
        height 55px
        line-height 55px
        color white
        text-decoration none
        cursor pointer
        font-size 16px
        border-bottom 1px solid $tabs-nav-border-blue
        position relative
        &:before
          content ""
          background url(../images/spirit-icons.png)
          background-repeat no-repeat
          position absolute
          display block
          top 50%
          transform translateY(-50%)
          width 20px
          height 22px
      a:hover
        color white
        text-decoration none
      .subnav-3-item
        &>span
        &>a
          font-size 14px
    .subnav-1-item
      &>span
      &>a
        padding-left 52px
        &:before
          width 24px
          height 24px
          left 18px
      &[data-expanded='false']
        &>span
        &>a
          &:after
            content ""
            background url(../images/spirit-icons.png)
            background-repeat no-repeat
            position absolute
            display block
            width 17px
            height 10px
            right 20px
            top 50%
            transform translateY(-50%)
            background-position -3px -44px
      &[data-expanded='true']
        &>span
        &>a
          &:after
            content ""
            background url(../images/spirit-icons.png)
            background-repeat no-repeat
            position absolute
            display block
            width 17px
            height 10px
            right 20px
            top 50%
            transform translateY(-50%)
            background-position -3px -44px
            transform rotate(180deg)
    .subnav-2-item
      position relative
      &>span
      &>a
        padding-left 52px
        &:before
          display none
      &[data-expanded='false']
        &>span
        &>a
          &:before
            content ""
            width 24px
            height 24px
            left 18px
            background url(../images/spirit-icons.png)
            background-position -53px 0px
            display block
            position absolute
            top 50%
            transform translateY(-50%)
      &[data-expanded='true']
        &>span
        &>a
          &:before
            content ""
            width 24px
            height 24px
            left 18px
            background url(../images/spirit-icons.png)
            background-position -28px 0px
            display block
            position absolute
            top 50%
            transform translateY(-50%)
    .subnav-3-item
      &>span
      &>a
        padding-left 84px
        &:before
          width 24px
          height 24px
          left 54px
          background-position -76px 0px
      
      
  &__sideNav[data-status='open']
    width 300px       
  &__sideNav[data-status='close']
    width 45px
    span
    a
      border none
      font-size 0
      &:after
        opacity 0
    .subnav-1-item
      span
      a
        &:before
          left 11px
  &__tabContent
    width calc(100% - 300px)
    width -webkit-calc(100% - 300px)
    width -moz-calc(100% - 300px)
    width -o-calc(100% - 300px)
    background white
    margin-top 0
    
    .nav-tabs
      padding-left 0
      background $tabs-bg-blue
      margin-bottom 0
      li
        margin-right 0
        a
          font-size 16px
        &.active
          a
            color $tabs-nav-text-active-blue
            background white
            button.navTabsCloseBtn
              color $tabs-nav-text-active-blue
              &:hover
                color black !important
      &>li>a
        color $tabs-nav-text-blue
        background $tabs-nav-bg-grey
        button.navTabsCloseBtn
          color $tabs-nav-text-blue
          &:hover
            color black !important
             
          
        